<div class="modal fade" id="newemployee" tabindex="-1" role="dialog" aria-labelledby="newemployee" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
        <%= form_for(@employee) do |f| %>
          <% if @employee.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

              <ul>
              <% @employee.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
              </ul>
            </div>
            <% end %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Employee Details</h4>
      </div>
      <div class="modal-body">
          <div class="row">

              <div class="form-group col-md-4">
                <%= f.label :firstname %><br>
                <%= f.text_field :firstname, class: "form-control" %>
              </div>
              <div class="form-group col-md-4">
                <%= f.label :lastname %><br>
                <%= f.text_field :lastname, class: "form-control"%>
              </div>
              <div class="form-group col-md-4">
                <%= f.label :email %><br>
                <%= f.text_field :email, class: "form-control" %>
              </div>

          </div>

          <h2> Weekly Time Preference </h2>
          <div class="row">
              <div class="col-lg-6 col-lg-offset-3" >
                  <div class="table-responsive">
                      <table class="table table-striped">
                          <thead>
                              <tr>
                                  <th class="header col-lg-2">Day</th>
                                  <th class="header col-lg-2">Start</th>
                                  <th class="header col-lg-2">Finish</th>
                              </tr>
                          </thead>
                          <tbody>
                              <tr>
                                  <td>Monday</td>
                                  <td>
                                      <div class="form-group">
                                          <%= f.text_field :monstart, class: "form-control" %>
                                      </div>
                                  </td>
                                  <td>
                                      <div class="form-group">
                                          <%= f.text_field :monfinish, class: "form-control" %>
                                      </div>
                                  </td>
                              </tr>
                              <tr>
                                  <td>Tuesday</td>
                                  <td>
                                      <div class="form-group">
                                          <%= f.text_field :tuestart, class: "form-control" %>
                                      </div>
                                  </td>
                                  <td>
                                      <div class="form-group">
                                          <%= f.text_field :tuefinish, class: "form-control" %>
                                      </div>
                                  </td>
                              </tr>
                              <tr>
                                  <td>Wednesday</td>
                                  <td>
                                      <div class="form-group">
                                          <%= f.text_field :wedstart, class: "form-control" %>
                                      </div>
                                  </td>
                                  <td>
                                      <div class="form-group">
                                          <%= f.text_field :wedfinish, class: "form-control" %>
                                      </div>
                                  </td>
                              </tr>
                              <tr>
                                  <td>Thursday</td>
                                  <td>
                                      <div class="form-group">
                                          <%= f.text_field :thurstart, class: "form-control" %>
                                      </div>
                                  </td>
                                  <td>
                                      <div class="form-group">
                                          <%= f.text_field :thurfinish, class: "form-control" %>
                                      </div>
                                  </td>
                              </tr>
                              <tr>
                                  <td>Friday</td>
                                  <td>
                                      <div class="form-group">
                                          <%= f.text_field :fristart, class: "form-control" %>
                                      </div>
                                  </td>
                                  <td>
                                      <div class="form-group">
                                          <%= f.text_field :frifinish, class: "form-control" %>
                                      </div>
                                  </td>
                              </tr>
                              <tr>
                                  <td>Saturday</td>
                                  <td>
                                      <div class="form-group">
                                          <%= f.text_field :satstart, class: "form-control" %>
                                      </div>
                                  </td>
                                  <td>
                                      <div class="form-group">
                                          <%= f.text_field :satfinish, class: "form-control" %>
                                      </div>
                                  </td>
                              </tr>
                              <tr>
                                  <td>Sunday</td>
                                  <td>
                                      <div class="form-group">
                                          <%= f.text_field :sunstart, class: "form-control" %>
                                      </div>
                                  </td>
                                  <td>
                                      <div class="form-group">
                                          <%= f.text_field :sunfinish, class: "form-control" %>
                                      </div>
                                  </td>
                              </tr>
                      </tbody>
                  </table>
              </div>
          </div>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default col-lg-1 col-lg-offset-9" data-dismiss="modal">Close</button>
          <div class="actions"> 
              <%= button_tag(type: "submit", class: "btn btn-primary col-lg-2") do %>
                  Save
              <% end %>
          </div>
      </div>
    </div>
  </div>
</div>


