<h1>Employee Preferences</h1>
<%= render "importmodal" %>

<div class="table-responsive table-bordered">
    <table class="table table-hover table-striped table-bordered tablesorter">
      <thead>
        <tr>
          <th>Firstname</th>
          <th>Lastname</th>
          <th>Email</th>
          <th class="col-sm-1"></th>
          <th class="col-sm-2">
              <div class="btn-group">
                  <%= link_to "Add Employee", new_employee_path, :type => "button", :class => "btn btn-default", :data => {:toggle => "modal", :target => "#newemployee", :remote => true} %>
                  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" >
                      <span class="caret"></span>
                      <span class="sr-only">Toggle Dropdown</span>
                  </button>
                  <ul class="dropdown-menu" role="menu">
                      <li><%= link_to "Import Employee Preferences", "#importmodal", :data => {:toggle => "modal", :target => "#importemployee"} %></li>
                  </ul>
              </div>
          </th>
        </tr>
      </thead>

      <tbody>
        <% @employees.each do |employee| %>
          <tr>
            <td><%= employee.firstname %></td>
            <td><%= employee.lastname %></td>
            <td><%= employee.email %></td>
            <td><%= link_to 'Preferences', edit_employee_path(employee), class: "btn btn-info" %></td>
            <td><%= link_to 'Remove', employee, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
<br>

