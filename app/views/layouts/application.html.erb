<!DOCTYPE html>
<html>
<head>
  <title>Mav1</title>
  <%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js" %>
  <%= twitter_bootstrap_stylesheet_link_tag :netdna %>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <div id="content">
        <header class="navbar navbar-inverse navbar-fixed-top" role="banner">
            <div class="navbar-header">
                <button class="navbar-toggle" data-target=".bs-navbar-collapse" data-toggle="collapse" type="button">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <%= link_to "Schedulemma", root_path, class: "navbar-brand" %>
            </div>
            <nav class="collapse navbar-collapse bs-navbar-collapse" role="navigation">
            <ul class="nav navbar-nav nav-tabs">
                <li> <%= link_to "Planner", week_path %> </li>
                <li> <%= link_to "Time Off", leaves_path %> </li>
                <li> <%= link_to "Employees", employees_path %> </li>
                </ul>

                <ul class="nav navbar-nav navbar-right">
                  <li <% if @overcapacity %> class="disabled"<% end %>><%= link_to render_path do %>
                            <i class="fa fa-bolt"></i>
                            Generate Schedule
                            <% unless @short.nil? %>
                              <span class="badge"><%=@short%></span>
                            <% end %>
                        <% end %>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" id="dropdownMenu1" href="#">
                            <i class="fa fa-user"></i>
                            Company.Name
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
                            <li><%= link_to settings_path do %>
                                <i class="fa fa-gear"></i>
                                Settings
                              <% end %>
                            </li>
                            <li><%= link_to destroy_user_session_path, method: :delete do %>
                                <i class="fa fa-power-off"></i>
                                Log Out
                              <% end %>
                            </li>
                        </ul>
                    </li>
                </ul>
            </nav>
            </header>
        <div id="page-wrapper">
            <%if @overcapacity %><div class="alert alert-danger"><strong> Overcapacity! </strong> You do not have that many employees</div> <% end %>
            <%= yield %>
        </div>
    </div>
  </body>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js" %> 
  <%= javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/jasny-bootstrap/3.1.2/js/jasny-bootstrap.min.js"%>
  <%= stylesheet_link_tag    "//cdnjs.cloudflare.com/ajax/libs/jasny-bootstrap/3.1.2/css/jasny-bootstrap.min.css"  %>
</html>
