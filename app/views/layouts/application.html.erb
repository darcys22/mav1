<!DOCTYPE html>
<html>
<head>
  <title>Mav1</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <div id="content">
        <header class="navbar navbar-inverse navbar-fixed-top" role="banner">
            <div class="navbar-header">
                <button class="navbar-toggle" data-target=".bs-navbar-collapse" data-toggle="collapse" type="button">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <%= link_to "Schedulemma", root_path, class: "navbar-brand" %>
            </div>
            <nav class="collapse navbar-collapse bs-navbar-collapse" role="navigation">
            <ul class="nav navbar-nav nav-tabs">
                <li> <%= link_to "Planner", week_path %> </li>
                <li> <%= link_to "Time Off", leaves_path %> </li>
                <li> <%= link_to "Employees", employees_path %> </li>
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li><%= link_to render_path do %>
                            <i class="fa fa-bolt"></i>
                            Render Schedule
                            <span class="badge">3</span>
                        <% end %>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" id="dropdownMenu1" href="#">
                            <i class="fa fa-user"></i>
                            Company.Name
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
                            <li role="presentation"><a role="menuitem" tabindex="-1" href="#">
                                <i class="fa fa-gear"></i>
                                Settings
                                </a>
                            </li>
                            <li> <a href="#">
                                <i class="fa fa-power-off"></i>
                                Log Out
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </nav>
        </header>
        <div id="page-wrapper">
<%= yield %>
        </div>
    </div>
</body>
</html>
