<div class="modal-dialog">
  <div class="modal-content">
    <% form_tag shift_path do -%>
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3 class="modal-title" id="myModalLabel">Edit Shift</h3>
      </div>
      <div class="modal-body">
        <h3><small><%= @shift.format_shift %></small></h3>
        <%= select_tag "employee_id", options_from_collection_for_select(@employees, "id", "format_name"), {name:                   "leave[employee_id]", class: "form-control" }%> 
      <div class="modal-footer">
        <button type="button" class="btn btn-default col-lg-1 col-lg-offset-7" data-dismiss="modal">Close</button>
          <div class="actions">
              <%= button_tag(type: "submit", class: "btn btn-primary col-lg-offset-1 col-lg-2") do %>
                  Save
                <% end %>
          </div>
      </div>
    </div>
  <% end %>
  </div>
</div>
