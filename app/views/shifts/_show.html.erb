<div class="modal-dialog">
  <div class="modal-content">
    <%= form_tag(shift_path(@shift), {:method => :put}) do %>
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h2 class="modal-title" id="myModalLabel">Edit Shift</h2>
    </div>
    <div class="modal-body">
      <h2><small><%= @shift.format_shift %></small></h2>
      <% if @empty %>
        There are no other employees available to work this shift 
        <br>
      <% else %>
        <div class="form-group">
          <label>Assign to:</label>
          <%= select_tag "employee_id", options_from_collection_for_select(@employees, "id", "format_name"), {name:                   "shift[shiftable_id]", class: "form-control" }%> 
        </div>
      <% end %>
      <br>
      <%= link_to 'Unassociate', @shift, method: :delete, class: "btn btn-warning" %>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default col-lg-1 col-lg-offset-7" data-dismiss="modal">Close</button>
      <div class="actions">
          <%= button_tag(type: "submit", class: "btn btn-primary col-lg-offset-1 col-lg-2") do %>
            Save
          <% end %>
      </div>
    </div>
    <% end %>
  </div>
</div>
