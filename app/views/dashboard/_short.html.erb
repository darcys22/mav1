<div class="modal-dialog">
  <div class="modal-content">
    <%= form_tag postresolve_dashboard_index_path do -%>
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Resolve Unavailability</h4>
        <p>For teh following X shifts: </p>
      </div>
      <div class="modal-body">
        <div class="row">
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th class="col-sm-1">Shift</th>
              </tr>
            </thead>
            <tbody data-link="row" class="rowlink">
              <% @issues.each do |issue| %>
                  <tr id=<%= issue.id%>>
                    <td>
                      <%=link_to shift_dashboard_index_path(shift_id: issue.id), remote: true do %>
                        <%= issue.format_shift %> 
                      <% end %>
                    </td>
                  </tr>
                <% end %>
                <br />
            </tbody>
          </table>
        </div>

        <div class="row">
          <p> There are only X-1 Employees available: </p>
          <div id= "shift-loc">
          </div>
        </div>
        <div class="row">
          <p> Please select some additional employees to work the difference
        </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default col-lg-1 col-lg-offset-7" data-dismiss="modal">Close</button>
          <div class="actions">
              <%= button_tag(type: "submit", class: "btn btn-primary col-lg-offset-1 col-lg-2") do %>
                  Save
                <% end %>
          </div>
      </div>
      <% end -%>
    </div>
  </div>
</div>
