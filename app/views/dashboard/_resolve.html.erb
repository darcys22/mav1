<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Resolve Unavailability</h4>
        <p> No employees are available for the following shifts: </p>
      </div>
      <div class="modal-body">
        <div class="row">
          <table class="table table-striped table-bordered">
            <thead>
              <tr>
                <th class="col-sm-1">Shift</th>
                <th class="col-sm-1">Assign to:</th>
              </tr>
            </thead>
            <tbody>
              <%= form_tag(postresolve_dashboard_index_path, :method=>'post') do %>
                <% @issues.each do |issue| %>
                  <tr>
                    <td> <%= issue.format_shift %> </td>
                    <td> <%= select_tag "employee", options_from_collection_for_select(@employees, "id", "format_name"), {name: "user_selections[#{issue}]" } %> </td>
                  </tr>
                <% end %>
                <br />
            </tbody>
          </table>
        </div>
      </div>
      <div class-"modal-footer">
        <%= submit_tag "Resolve" %>
      <% end %>
    </div>
  </div>
</div>


